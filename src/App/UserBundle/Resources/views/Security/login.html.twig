{% extends "::base.html.twig" %}

{% block title %}RepairBundle:Repair:show{% endblock %}

{% block body %}
    {% trans_default_domain 'FOSUserBundle' %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form class="form-inline" action="{{ path("fos_user_security_check") }}" method="post">
        <div class="form-group">
            <label class="sr-only" for="username">{{ 'form.username'|trans }}</label>
            <input type="text" class="form-control" id="username" name="_username" placeholder="{{ 'security.login.username'|trans }}" value="{{ last_username }}" required="required">
        </div>
        <div class="form-group">
            <label class="sr-only" for="password">{{ 'form.password'|trans }}</label>
            <input type="password" class="form-control" id="password"  name="_password" required="required" placeholder="{{ 'security.login.password'|trans }}">
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on">{{ 'security.login.remember_me'|trans }}
            </label>
        </div>
        <input type="submit" id="_submit" name="_submit" class="btn btn-default" value="{{ 'security.login.submit'|trans }}" />

        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    </form>
{% endblock %}
{% block javascripts %}
    {{ parent() }}

{% endblock %}
