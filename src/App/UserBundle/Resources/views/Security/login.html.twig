{% extends "RepairBundle::layout.html.twig" %}

{% block title %}登录{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        body{

            min-height: 768px;
            background-image: url("{{ asset('bundles/repair/img/Background-Gradient.jpg') }}");
            background-repeat:no-repeat;
            background-size:100% 100%;
            background-origin:content-box;
        }


        .navbar-brand{
            float: left;
        }
        .bottom {
            clear: both;

            bottom: 0;
            position: absolute;
            width: 100%;

            z-index: -99;
        }
        .bottom img{
            margin-left: 10%;
            margin-right: 10%;
            width: 80%;
            max-width: 1500px;

        }



        div p{
            font-size: 60px;
            color: #ffffff;

            padding-bottom:30px;



            text-align: center;
        }

        #welcome{
            padding-top: 60px;
            color: #ffffff;
            clear: both;

            text-align: center;
        }
        #login{
            text-align: center;
        }

        #errorMsg
        {

            color:#ffff00;
        }
        .checkbox label{
            color:#ffffff;
        }
    </style>
{% endblock %}

{% block nav %}

    <a class="navbar-brand" href="{{ path('homepage') }}"><img src="{{ asset('bundles/repair/images/Logo-white.png') }}" alt="logo" width="180" /></a>

{% endblock %}

{% block body %}


    <div id="welcome" class="col-sm-6 col-sm-offset-3">
        <h4>欢&nbsp;&nbsp;迎&nbsp;&nbsp;使&nbsp;&nbsp;用</h4>
    </div>

    <div class="col-sm-6 col-sm-offset-3">
        <p>办公报修系统</p>
    </div>

    {% trans_default_domain 'FOSUserBundle' %}


<div id="login">
    <form class="form-horizontal col-sm-2 col-sm-offset-5" action="{{ path("fos_user_security_check") }}" method="post">
            <div class="form-group">
                {% if error %}
                    <div id="errorMsg" class="col-sm-12"><h4>{{ error.messageKey|trans(error.messageData, 'security') }}</h4></div>
                {% endif %}
                <div class="col-sm-12">
                    <input type="text" class="form-control" id="username" name="_username" placeholder="{{ 'security.login.username'|trans }}" value="{{ last_username }}" required="required">
                </div>
            </div>
            <div class="form-group">

                <div class="col-sm-12">
                    <input type="password" class="form-control" id="password"  name="_password" required="required" placeholder="{{ 'security.login.password'|trans }}">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on">{{ 'security.login.remember_me'|trans }}
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <input type="submit" id="_submit" name="_submit" class="btn btn-default" value="{{ 'security.login.submit'|trans }}" />
                </div>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        </form>



</div>
{% endblock %}

{% block footer %}

<div class="bottom">
    <img src="{{ asset('bundles/repair/img/indexBottom.png') }}" alt="items" />
</div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {


        })
    </script>

{% endblock %}
