{% extends "RepairBundle::layout.html.twig" %}

{% block title %}RepairBundle:Repair:show{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        body{
            background-image: url("{{ asset('bundles/repair/img/Background-Gradient.jpg') }}");
            background-repeat:no-repeat;
            background-size:100% 100%;
            background-origin: border-box;
        }

    </style>
{% endblock %}

{% block nav %}

    <a class="navbar-brand" href="{{ path('homepage') }}"><img src="{{ asset('bundles/repair/images/Logo-white.png') }}" alt="logo" width="180" /></a>

{% endblock %}

{% block body %}
    {% trans_default_domain 'FOSUserBundle' %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form class="form-inline" action="{{ path("fos_user_security_check") }}" method="post">
        <div class="form-group">
            <label class="sr-only" for="username">{{ 'form.username'|trans }}</label>
            <input type="text" class="form-control" id="username" name="_username" placeholder="{{ 'security.login.username'|trans }}" value="{{ last_username }}" required="required">
        </div>
        <div class="form-group">
            <label class="sr-only" for="password">{{ 'form.password'|trans }}</label>
            <input type="password" class="form-control" id="password"  name="_password" required="required" placeholder="{{ 'security.login.password'|trans }}">
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on">{{ 'security.login.remember_me'|trans }}
            </label>
        </div>
        <input type="submit" id="_submit" name="_submit" class="btn btn-default" value="{{ 'security.login.submit'|trans }}" />

        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    </form>
{% endblock %}

{% block footer %}



{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {


        })
    </script>

{% endblock %}
