{% extends "RepairBundle::layout.html.twig" %}

{% block title %}RepairBundle:Repair:post{% endblock %}

{% block body %}
<div class="row">

    {% trans_default_domain 'RepairBundle' %}
    <div class="col-md-4 col-md-offset-1">
        <form action="{{ path('fault_report') }}" {{ form_enctype(form) }} method="post">
            <fieldset >
                <legend>{{ 'form.faultInfo'|trans }}</legend>
                <div class="row">
                    <div class="col-md-4 ">
                        {{ 'form.faultType'|trans }}
                    </div>
                    <div class="col-md-8 form-group">
                        {{ form_widget(form.faultType, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-md-4">
                        {{ 'form.group'|trans }}
                    </div>
                    <div class="col-md-8 form-group">
                        {{ form_widget(form.group, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-md-4">
                        {{ 'form.faultPriority'|trans }}
                    </div>
                    <div class="col-md-8 form-group">
                        {{ form_widget(form.faultPriority, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-md-4">
                        {{ 'form.Title'|trans }}
                    </div>
                    <div class="col-md-8 form-group">
                        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-md-4">
                        {{ 'form.reporterDescription'|trans }}
                    </div>
                    <div class="col-md-8 form-group">
                        {{ form_widget(form.reporterDescription, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-md-2 col-md-offset-4 form-group">
                        <button type="submit" class="form-control" >{{ 'form.post'|trans }}</button>
                    </div>
                </div>
                {{ form_row(form._token) }}
            </fieldset>

        </form>
    </div>
{% endblock %}